`timescale 1 ns/ 1 ns
module MskDemod_vlg_tst();
// constants                                           
// general purpose registers
//reg eachvec;
// test vector input registers
reg clk;
reg [7:0] din;
reg rst;
// wires                                               
wire bit_sync;
wire dout;
reg[0:0] data;
// assign statements (if any)                          
MskDemod i1 (
// port map - connection between master ports and signals/registers   
	.bit_sync(bit_sync),
	.clk(clk),
	.din(din),
	.dout(dout),
	.rst(rst)
);
parameter clk_period=20; //设置时钟信号周期（频率）
parameter period_data=clk_period*1;//数据周期
parameter clk_half_period=clk_period/2;
parameter data_half_period=period_data/2;
parameter data_num=20000-1;  //仿真数据长度
parameter time_sim=data_num*period_data; //仿真时间

initial
begin
	//设置时钟信号初值
	clk=1;
	//clk_data=1;
	//设置复位信号
	rst=1;
	#400 rst=0;
	//设置仿真时间
	#time_sim $finish;
	//#400 $finish;
end



//产生时钟信号
always                                                 
	#clk_half_period clk=~clk;


//从外部TX文件读入数据作为测试激励
integer Pattern;
reg [7:0] stimulus[1:data_num];
initial
begin
   //文件必须放置在"工程目录\simulation\modelsim"路径下
	$readmemb("msk.txt",stimulus);
	Pattern=0;
	repeat(data_num)
		begin
			Pattern=Pattern+1;
			din=stimulus[Pattern];
			#period_data;
		end
end

//从外部TX文件读入msk_bit.txt数据以对比解调前后的数据

integer Pattern_bit;
reg [0:0]stimulus_bit[1:data_num];
initial
begin
   //文件必须放置在"工程目录\simulation\modelsim"路径下
	$readmemb("msk_bit.txt",stimulus_bit);
	Pattern_bit=0;
	repeat(data_num)
		begin
			Pattern_bit=Pattern_bit+1;
			data=stimulus_bit[Pattern_bit];
			#period_data;
		end
end
	
endmodule
